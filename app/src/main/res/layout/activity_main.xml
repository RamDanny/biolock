<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_title"
        android:textSize="40sp"
        android:fontFamily="monospace"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="startLogging"/>

    <TextView
        android:id="@+id/appDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_desc"
        android:textSize="20sp"
        android:fontFamily="monospace"
        android:textAlignment="center"
        android:layout_below="@id/appTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/trainButtonHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_trainButtonHome"
        android:layout_below="@id/appDesc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:onClick="trainButtonHome"/>

    <Button
        android:id="@+id/testButtonHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_testButtonHome"
        android:layout_below="@id/trainButtonHome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="testButtonHome"/>

    <TextView
        android:id="@+id/appAuthors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_authors"
        android:textSize="20sp"
        android:fontFamily="monospace"
        android:textAlignment="center"
        android:layout_below="@id/testButtonHome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"/>

</RelativeLayout>